{
  "name": "nodejs-training-project",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npx nodemon",
    "start": "npm run build && node build/app",
    "build": "rimraf ./build && npx tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 \"src/**/**/*.html\" \"src/**/*.css\" build/",
    "eslint": "npx eslint ./src",
    "eslint-fix": "eslint --fix ./src",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michail-lazarau/nodejs-training-project.git"
  },
  "private": true,
  "dependencies": {
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "copyfiles": "^2.4.1",
    "date-fns": "^3.5.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "joi": "^17.12.2",
    "nunjucks": "^3.2.4",
    "typescript": "^5.4.2"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": ".js, .ts, .json, .html, .css",
    "ignore": [],
    "exec": "node --experimental-specifier-resolution=node --loader ts-node/esm ./src/app.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/nunjucks": "^3.2.6",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^9.0.11",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md,html}": [
      "prettier -single-quote --write",
      "git add"
    ]
  }
}
